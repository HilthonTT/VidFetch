@inject NavigationManager navManager

<MudAppBar Color="Color.Primary" Fixed="false">
    <MudIconButton Icon="@Icons.Material.Filled.Home"
                   Color="Color.Inherit"
                   Edge="Edge.Start"
                   Title="Home"
    @onclick="LoadHomePage" />
    <MudIconButton Icon="@Icons.Material.Filled.Download"
                   Color="Color.Inherit"
                   Edge="Edge.Start"
                   Title="Download"
    @onclick="LoadPasteLinkPage" />
    <MudIconButton Icon="@Icons.Material.Filled.PersonalVideo"
                   Color="Color.Inherit"
                   Edge="Edge.Start"
                   Title="Saved Medias"
    @onclick="LoadSavedMediasPage" />
    <MudIconButton Icon="@Icons.Material.Filled.Search"
                   Color="Color.Inherit"
                   Edge="Edge.Start"
                   Title="Search"
    @onclick="LoadSearchPage" />
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Settings"
                   Color="Color.Inherit"
                   Title="Settings"
    @onclick="LoadSettingsPage" />
    <MudIconButton Icon="@Icons.Custom.Brands.GitHub"
                   Color="Color.Inherit"
                   Title="GitHub"
    @onclick="LoadGithubPage" />
</MudAppBar>

