@inject NavigationManager navManager
@inject ISettingsLibrary settingsLibrary
@inject ISettingsData settingsData

<MudAppBar Color="Color.Primary" Fixed="false">
    <MudIconButton 
        Icon="@Icons.Material.Filled.Home" 
        Color="Color.Inherit" 
        Edge="Edge.Start"
        Title="Home"
        @onclick="LoadHomePage"/>
    <MudSpacer />
    <MudIconButton 
        Icon="@Icons.Material.Filled.Settings"
        Color="Color.Inherit"
         Title="Settings"
        @onclick="LoadSettingsPage" />
    <MudIconButton 
        Icon="@Icons.Custom.Brands.GitHub" 
        Color="Color.Inherit"
        @onclick="LoadGithubPage" />
</MudAppBar>

@code {
    private void LoadHomePage()
    {
        navManager.NavigateTo("/");
    }

    private void LoadSettingsPage()
    {
        navManager.NavigateTo("/Settings");
    }

    private void LoadGithubPage()
    {
        navManager.NavigateTo("https://github.com/HilthonTT");
    }
}