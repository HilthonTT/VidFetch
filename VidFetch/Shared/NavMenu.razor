@inject ILanguageExtension languageExtension
@inject NavigationManager navManager

<MudAppBar Color="Color.Dark" Fixed="false">
    <MudIconButton Icon="@Icons.Material.Filled.Home"
                   Color="Color.Inherit"
                   Edge="Edge.Start"
                   Title="Home"
    @onclick="LoadHomePage" />
    <MudIconButton Icon="@Icons.Material.Filled.Link"
                   Color="Color.Inherit"
                   Edge="Edge.Start"
                   Title="@GetDictionary()[KeyWords.PasteALink]"
    @onclick="LoadPasteLinkPage" />
    <MudIconButton Icon="@Icons.Material.Filled.PersonalVideo"
                   Color="Color.Inherit"
                   Edge="Edge.Start"
                   Title="@GetDictionary()[KeyWords.SavedMedias]"
    @onclick="LoadSavedMediasPage" />
    <MudIconButton Icon="@Icons.Material.Filled.Search"
                   Color="Color.Inherit"
                   Edge="Edge.Start"
                   Title="@GetDictionary()[KeyWords.Search]"
    @onclick="LoadSearchPage" />
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Settings"
                   Color="Color.Inherit"
                   Title="@GetDictionary()[KeyWords.Settings]"
    @onclick="LoadSettingsPage" />
    <MudIconButton Icon="@Icons.Custom.Brands.GitHub"
                   Color="Color.Inherit"
                   Title="GitHub"
    @onclick="LoadGithubPage" />
</MudAppBar>

