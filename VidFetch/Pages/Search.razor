@page "/Search"
@inject ILanguageExtension languageExtension

<MudText Typo="Typo.h4" Class="text-center text-uppercase mb-4">
    @GetDictionary()[KeyWords.Search]
    <MudIcon Icon="@Icons.Custom.Brands.YouTube" Title="Search"></MudIcon>
</MudText>
<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" Centered="true">
    <MudTabPanel Text="@GetDictionary()[KeyWords.Videos]">
        <SearchData TData="VideoModel"/>
    </MudTabPanel>
    <MudTabPanel Text="@GetDictionary()[KeyWords.Channels]">
        <SearchData TData="ChannelModel" />
    </MudTabPanel>
    <MudTabPanel Text="@GetDictionary()[KeyWords.Playlists]">
        <SearchData TData="PlaylistModel" />
    </MudTabPanel>
</MudTabs>


