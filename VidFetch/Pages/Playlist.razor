@page "/Playlist/{Url}"
@inject IYoutube youtube
@inject IPlaylistData playlistData
@inject ISnackbar snackbar
@inject ILauncher launcher
@inject ILanguageExtension languageExtensions
@inject NavigationManager navManager

@if (IsPlaylistNull() is false)
{
    <MudGrid Spacing="5">
        <MudItem xs="12">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        @_playlist.Title
                    </CardHeaderContent>
                    <CardHeaderAvatar>
                        <MudAvatar>
                            <MudImage Src="@_playlist.AuthorThumbnailUrl"></MudImage>
                        </MudAvatar>
                    </CardHeaderAvatar>
                </MudCardHeader>
                <MudCardMedia Image="@_playlist.ThumbnailUrl"/>
                <MudCardContent>
                    <MudLink Typo="Typo.h5" @onclick="OpenUrl">@_playlist.Url</MudLink>
                    <MudText Typo="Typo.body2">@_videos?.Count @GetDictionary()[KeyWords.Videos].ToLower()</MudText>
                </MudCardContent>
                <MudCardActions>
                    @if (_isSaved)
                    {
                        <MudButton Variant="Variant.Text" Color="Color.Error" @onclick="DeletePlaylist">
                            @GetDictionary()[KeyWords.Delete]
                        </MudButton>
                    }
                    else
                    {
                        <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="SavePlaylist">
                            @GetDictionary()[KeyWords.Save]
                        </MudButton>
                    }
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12">
            <MudDivider />
            <MudText Typo="Typo.h5" Class="mb-4 mt-4">Videos</MudText>
            <MudAlert Severity="Severity.Warning">
                @GetDictionary()[KeyWords.PlaylistWarning]
            </MudAlert>
            <MudGrid>
                <MudVirtualize Items="_visibleVideos" Context="v" OverscanCount="6">
                    <VideoComponent @key="v.VideoId"
                                    Video="v"
                                    CardSize="6"
                                    RemoveEvent="RemoveVideo" />
                </MudVirtualize>
            </MudGrid>
            @if (_loadedItems < _videos.Count)
            {
                <div class="text-center mt-4">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                    @onclick="LoadMoreVideos">
                        @GetDictionary()[KeyWords.LoadMore]
                    </MudButton>
                </div>
            }
        </MudItem>
    </MudGrid>
}

<LoadingDialog IsVisible="IsPlaylistNull()" />

