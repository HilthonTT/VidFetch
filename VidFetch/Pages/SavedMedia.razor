@page "/SavedMedias"
@inject ILanguageExtension languageExtension

<MudText Typo="Typo.h4" Class="text-center text-uppercase mb-4">
    @GetDictionary()[KeyWords.SavedMedias]
    <MudIcon Icon="@Icons.Material.Filled.PersonalVideo" Title="@GetDictionary()[KeyWords.SavedMedias]"></MudIcon>
</MudText>

@if (_isVisible)
{
    <MudDialog Options="((new DialogOptions() { NoHeader = true }))"
               Class="backdrop-blur">
        <DialogContent>
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
        </DialogContent>
    </MudDialog>
}

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" Centered="true">
    <MudTabPanel Text="@GetDictionary()[KeyWords.Videos]">
        <SavedData TData="VideoModel" OpenLoading="ToggleLoadingOverlay" />
    </MudTabPanel>
    <MudTabPanel Text="@GetDictionary()[KeyWords.Channels]">
        <SavedData TData="ChannelModel" OpenLoading="ToggleLoadingOverlay" />
    </MudTabPanel>
    <MudTabPanel Text="@GetDictionary()[KeyWords.Playlists]">
        <SavedData TData="PlaylistModel" OpenLoading="ToggleLoadingOverlay" />
    </MudTabPanel>
</MudTabs>
